using System;
using System.Collections.Generic;
using System.Linq;

namespace ConsoleApp58
{
    class Program
    {
        static void Main(string[] args)
        {



            int n = int.Parse(Console.ReadLine());


            Dictionary<string, Dictionary<string, List<string>>> continents =
                new Dictionary<string, Dictionary<string, List<string>>>();

            for (int i = 0; i < n; i++)
            {
                string[] countries = Console.ReadLine().Split(" ", StringSplitOptions.RemoveEmptyEntries);

                string countitnent = countries[0];
                string county = countries[1];
                string city = countries[2];

                if (continents.ContainsKey(countries[0]) == false)
                {
                    continents.Add(countitnent, new Dictionary<string, List<string>>());
                    
                }

                if (continents[countitnent].ContainsKey(county) == false)
                {
                    continents[countitnent].Add(county, new List<string>());
                }

                continents[countitnent][county].Add(city);

            }

            foreach (var continent in continents)
            {
                Console.WriteLine($"{continent.Key}:");

                foreach (var country in continent.Value)
                {
                    Console.WriteLine($"  {country.Key} -> {string.Join(", ", country.Value)}");
                }

            }


        }
    }
}
